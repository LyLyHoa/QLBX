@model List<Models.DTO.CTChuyenXe>
@{
    ViewBag.Active = "liDatVe";
    ViewBag.Title = "Nhà xe hân hạnh phục vụ quý khách";
    Layout = "~/Views/Layout/_Layout.cshtml";
    var searchString="";
}

<div class="container theme-showcase" role="main">

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <h2>Thông tin các chuyến xe</h2>
        <p>Sự an toàn của bạn là thách thức của chúng tôi</p>
    </div>

    <div class="page-header">
        <h2>Danh sách các chuyến xe</h2>

        
    </div>
    <div class="row">
        <form action="" method="post">
            <div class="col-lg-3 col-lg-offset-7">
                <input type="text" name="id" class="form-control" width="100" placeholder="Nhập từ khóa ... " />
            </div>
            <div class="col-lg-1 p-0">
                <button class="btn btn-primary">Tìm kiếm</button>
            </div>
        </form>
    </div>
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Tên tuyến</th>
                <th>Ngày đi</th>
                <th>Giờ đi</th>
                <th>Số xe</th>
                <th>Số chỗ ngồi</th>
                <th>Giá vé</th>
                <th>Đặt chỗ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Models.DTO.CTChuyenXe cx in Model)
            {
                <tr>
                    <td>@cx.TenTuyen</td>
                    <td>@cx.NgayDi.ToShortDateString()</td>
                    <td>@cx.Gio</td>
                    <td>@cx.SoXe</td>
                    <td>@cx.SoChoNgoi</td>
                    <td>@cx.Gia</td>

                    <td><a class="btn btn-warning" href="/DatVe/DatCho/@cx.IdChuyen">Đặt chỗ</a></td>
                </tr>
            }


        </tbody>
    </table>






</div> <!-- /container -->

@section style{
    <style>
        .p-0{
            padding-left:10px;
            padding-right:10px;
            padding:0px !important;
            margin-left:10px;
        }
    </style>
}
